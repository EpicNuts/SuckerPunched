<div class='post'>
		<h1 id='wicked' style='text-align:center;'><span id='wicked2'></span><%= @post.title %></h1>
		<br>
<small><%= @post.created_at.strftime("%b %d. %Y") %></small>
<p>Fabricated by: <%= @post.admin_user.name %></p>
<div style='width:560px;height:560px;overflow:hidden;'><p><%= @post.body.html_safe %></p></div>
<p>Category: <%= link_to @post.category.name,categories_path(:id => @post.category.id) %></p>
<p><%= link_to "Back",posts_path %></p>

<hr />
<h3>Add your worthless opinion...</h3>
<%= form_for @post_comment do |f| %>

	<%= f.hidden_field :post_id %>

	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit "Let It Ride" %>

	</p>
<% end %>

<%= render :partial => 'partials/post_comment', :collection => @post.post_comments %>
</div>