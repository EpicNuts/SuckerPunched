<% if @posts.each do |post| %>
<div class="post">
	<h2 id='wicked' style='text-align:center;'><span id='wicked2'></span><%= link_to post.title, post %></h2>
	<div class="entry">
		<div class='entryTruncate'><%=  post.body.html_safe %>
		</div>
	</div>
	<div class="byline">
		<p class="meta">May 07, 2012 Posted by <%= post.admin_user.name %></p>

		<p class="links"><%= link_to "Read More",post %>&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Comments",post %></p>
	</div>
</div>
<% end.empty? %>
	<p style='color:#ffffff;'>No one's posted in this category yet...</p>
<% end %>